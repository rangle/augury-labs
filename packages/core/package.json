{
  "name": "@augury/core",
  "version": "0.1.4",
  "description": "",
  "author": "rangle.io",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "echo 'hello';npm-run-all lint:*",
    "lint:ts": "tslint --project .",
    "lint:ts:fix": "tslint --project . --fix",
    "pretty": "prettier --list-different '**/*.{css,js,json,md,scss,ts}'",
    "pretty:fix": "prettier --write '**/*.{css,js,json,md,scss,ts}'"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/*.spec.+(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "moduleNameMapper": {
      "@package/(.*)": "<rootDir>/src/$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm-run-all lint test"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^2.9.2"
  }
}
