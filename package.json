{
  "name": "root",
  "version": "0.5.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rangle/augury-labs"
  },
  "workspaces": [
    "packages/**",
    "tools"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:watch": "lerna run --parallel build:watch",
    "clean": "lerna run clean",
    "changelog": "lerna-changelog",
    "publish-packages": "lerna publish",
    "link-packages": "lerna link",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "coverage": "lerna run coverage",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "precommit": "lerna run --concurrency 1 --stream precommit",
    "pretty:check": "prettier --list-different \"**/*.{css,js,json,md,scss,ts}\"",
    "pretty:fix": "prettier --write \"**/*.{css,js,json,md,scss,ts}\"",
    "fix": "npm run lint:fix && npm run pretty:fix"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "clean-webpack-plugin": "^1.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "husky": "^1.2.0",
    "jest": "^23.5.0",
    "lerna": "^3.8.0",
    "lerna-changelog": "^0.8.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "to-string-loader": "^1.1.5",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.1.6",
    "url-loader": "^1.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  }
}
