{
  "name": "@augury/root",
  "version": "0.6.0-beta.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rangle/augury-labs"
  },
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:prod": "lerna run build:prod",
    "build:watch": "lerna run build:watch",
    "clean": "lerna run clean",
    "commit": "commit",
    "release": "npm run build:prod && lerna publish",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0 && prettier --write CHANGELOG.md",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch",
    "coverage": "lerna run coverage",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "pretty:check": "prettier --list-different \"**/*.{css,html,js,json,md,scss,ts}\"",
    "pretty:fix": "prettier --write \"**/*.{css,html,js,json,md,scss,ts}\"",
    "fix": "npm run lint:fix && npm run pretty:fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@angular-devkit/core": "~7.3.7",
    "@angular-devkit/schematics": "~7.3.7",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "@commitlint/prompt-cli": "^7.5.0",
    "@schematics/angular": "^7.3.7",
    "@types/jest": "^24.0.11",
    "clean-webpack-plugin": "^1.0.0",
    "conventional-changelog": "^3.1.3",
    "conventional-changelog-cli": "^2.0.12",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lerna": "^3.13.2",
    "lint-staged": "^8.1.5",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.0",
    "rollup-plugin-typescript2": "^0.20.1",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "to-string-loader": "^1.1.5",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.0",
    "webpack-filter-warnings-plugin": "^1.2.1",
    "webpack-merge": "^4.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,html,js,json,md,scss,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 100,
    "proseWrap": "preserve",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
